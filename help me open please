<script type="text/javascript">

function submit_deposit() {
  let x = document.forms["myForm"]["paymentMethod"].value;
  if (x == "") {
    Swal.fire({
      title: 'Error',
      icon: 'warning',
      html: 'Payment method is required.',
    });
    return false;
  }
  let y = document.forms["myForm"]["amount"].value;
  if (y == "") {
    Swal.fire({
      title: 'Error',
      icon: 'warning',
      html: 'Please enter specific amount you want to deposit.',
    });
    return false;
  }

  if (y<500) {
    Swal.fire({
      title: 'Error',
      icon: 'warning',
      html: 'Amount must be greater than $500.',
    });
    return false;
  }
  let timerInterval
  Swal.fire({
    title: 'Processing Payment',
    icon: 'info',
    html: 'You will be redirected to a payment gateway to process payment.',
    timer: 5000,
    timerProgressBar: true,
    didOpen: () => {
      Swal.showLoading()
      const b = Swal.getHtmlContainer().querySelector('b')

    },
    willClose: () => {
      clearInterval(timerInterval)
    }
  }).then((result) => {
    document.getElementById("myForm").submit();

  })

}

function changePaymentmethod(){
  $('#btcPayment').hide();
  $('#usdtPayment').hide();
  $('#bankPayment').hide();

  let value = $('#paymentMethod').val();
  if (value == "BTC") {
    $('#btcPayment').show();
    Swal.fire({
      icon: 'success',
      title: 'BTC DEPOSIT',
      text: 'Copy the BTC wallet address above and make deposit.'
    });
  }else if (value == "USDT") {
    $('#usdtPayment').show();
    Swal.fire({
      icon: 'success',
      title: 'USDT DEPOSIT',
      text: 'Copy the USDT wallet address above and make deposit.'
    });
  }else if (value == "bank") {
    $('#bankPayment').show();
    Swal.fire({
      icon: 'success',
      title: 'BANK DEPOSIT',
      text: 'Select a bank account above and make deposit.'
    });
  }
}


function selectBank(){
  $('#HUF').hide();
  $('#EUR').hide();
  $('#USD').hide();
  $('#GBP').hide();
  $('#PLN').hide();


  let value = $('#bankMethod').val();
  if (value == "HUF") {
    $('#HUF').show();
  }else if (value == "EUR") {
    $('#EUR').show();
  }else if (value == "USD") {
    $('#USD').show();
  }else if (value == "GBP") {
    $('#GBP').show();
  }else if (value == "PLN") {
    $('#PLN').show();
  }
}

</script>






