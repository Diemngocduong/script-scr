<script type="text/javascript">
  function submitForm(){
    let x = document.forms["myForm"]["paymentMethod"].value;
    let y = document.forms["myForm"]["amount"].value;
    if (x == "none") {
      Swal.fire({
        title: 'Error',
        icon: 'warning',
        html: 'Payment method is required.',
      });
      return false;
    }else if (y == "") {
      Swal.fire({
        title: 'Error',
        icon: 'warning',
        html: 'Please enter specific amount you want to deposit.',
      });
      return false;
    }else if (y<200) {
      Swal.fire({
        title: 'Error',
        icon: 'warning',
        html: 'Amount must be greater than $500.',
      });
      return false;
    }else {
      document.getElementById("myForm").submit();
    }
  }

        function cal() {
            var  amount = $('#amount').val();
            var payout = $('#payout').val();
            var echo;
            var percent =  1;
            var compouund = 0.5;
            var plan;
            var total;
            var daily = amount*percent;
            var daily2 = amount*compouund;
            console.log(payout)
            if(payout=="daily"){
                echo ="Daily";
                daily = 500 * amount;
                daily = daily/100;

                total = daily*1;
                total = parseInt(total)+parseInt(amount);
                plan = "Daily"

              }else if(payout=="48hours"){
                  echo ="48 Hours";
                  daily = 500 * amount;
                  daily = daily/100;

                  total = daily*1;
                  total = total*2;
                  total = parseInt(total)+parseInt(amount);
                  plan = "48 Hours"

                }else if(payout=="6months"){
                if (amount <= 9999) {
                  echo ="6 Months";
                  daily = 800 * amount;
                  daily = daily/100;

                  total = daily*180;
                  total = parseInt(total)+parseInt(amount);
                  plan = "Basic"
                }else if (amount <= 49999) {
                  echo ="6 Months";
                  daily = 900 * amount;
                  daily = daily/100;

                  total = daily*180;
                  total = parseInt(total)+parseInt(amount);
                  plan = "Silver"
                }else if (amount <= 99999) {
                  echo ="6 Months";
                  daily = 850 * amount;
                  daily = daily/100;

                  total = daily*180;
                  total = parseInt(total)+parseInt(amount);
                  plan = "Business"
                }else if (amount >= 100000) {
                  echo ="6 Months";
                  daily = 851 * amount;
                  daily = daily/100;

                  total = daily*180;
                  total = parseInt(total)+parseInt(amount);
                  plan = "Premium"
                }
              }else if(payout=="9months"){
                if (amount <= 9999) {
                  echo ="9 Months";
                  daily = 800 * amount;
                  daily = daily/100;

                  total = daily*270;
                  total = parseInt(total)+parseInt(amount);
                  plan = "Basic"
                }else if (amount <= 49999) {
                  echo ="9 Months";
                  daily = 900 * amount;
                  daily = daily/100;

                  total = daily*270;
                  total = parseInt(total)+parseInt(amount);
                  plan = "Silver"
                }else if (amount <= 99999) {
                  echo ="9 Months";
                  daily = 850 * amount;
                  daily = daily/100;

                  total = daily*270;
                  total = parseInt(total)+parseInt(amount);
                  plan = "Business"
                }else if (amount >= 100000) {
                  echo ="9 Months";
                  daily = 851 * amount;
                  daily = daily/100;

                  total = daily*270;
                  total = parseInt(total)+parseInt(amount);
                  plan = "Premium"
                }
              }

            $('#mainpayout').text(echo);
            $('#plan').text(plan);
            $('#mainamount').text('$'+amount);
            $('#daily').text('$'+daily);
            $('#total').text('$'+total);



        }

